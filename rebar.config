%% -*- mode: erlang -*-
%% ex: ft=erlang ts=2 sw=2 et
{cover_enabled, true}.

{deps, [
    {lager, ".*", 
      {git, "https://github.com/basho/lager.git",{tag,"2.0.0"}}},
    {cowboy, ".*", 
      {git, "https://github.com/extend/cowboy.git", {tag, "0.8.6"}}},
    {lhttpc, ".*", 
      {git, "https://github.com/oscarh/lhttpc.git", {branch, "master"}}},
    {sync, ".*", 
      {git, "https://github.com/rustyio/sync.git",{branch, "master"}}}
  ]}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{erl_opts, [
    %warn_missing_spec
]}.

{clean_files, [
    "test/*.beam",
    "erl_crash.dump",
    "log"
  ]}.

{xref_checks, [undefined_function_calls]}.

{xref_queries, [
    {"((XC - UC) || (XU - X - B))", []},
    {"(L - LU)", []}
  ]}.
